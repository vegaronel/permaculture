<%- include("partials/AdminHeader.ejs") %>

<div class="container">
  <h1>Pending Registration</h1>
  <div class="table-responsive">
    <table id="pendingUsersTable" class="display table mt-5">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% pendingUsers.forEach(user => { %>
          <tr>
            <td><%= user.firstname %> <%= user.lastname %></td>
            <td><%= user.email %></td>
            <td><%= user.status %></td>
            <td>
              <form action="/admin/verify-user/<%= user._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-success btn-sm">Verify</button>
              </form>
              <form action="/admin/reject-user/<%= user._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <h4>Received Emails</h4>
  <div class="table-responsive">
    <table id="example" class="display table mt-5">
      <thead>
        <tr>
          <th class="col-lg-1">Profile</th>
          <th>Status</th>
          <th>Email</th>
          <th>Subject</th>
          <th>Date Sent</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% emails.forEach(email => { %>
          <tr>
            <td class="d-flex justify-content-center"> <img src="/<%= email.profilePicture  %>" alt="" width="50" height="50"></td>
            <td><%= email.read ? '📤' : '✉️' %></td>
            <td>
              <a href="#" class="email-link" data-id="<%= email._id %>"><%= email.email %></a>
            </td>
            <td><%= email.subject %></td>
            <td><%= email.dateSent.toLocaleString() %></td>
            <td>
              <a class="btn btn-primary btn-sm" href="/admin/email/<%= email._id %>">View</a>
              <button type="button" class="btn btn-danger btn-sm delete-button" data-id="<%= email._id %>">Delete</button>
              <form id="delete-form-<%= email._id %>" action="/admin/emails/delete/<%= email._id %>" method="POST" style="display:none;"></form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <h4>Plant Collection</h4>
  <div class="table-responsive">
    <table class="display table mt-5">
      <thead>
        <tr>
          <th>Name</th>
          <th>Planting Instructions</th>
          <th>Watering Schedule</th>
          <th>Harvest Time</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% plants.forEach(plant => { %>
          <tr>
            <td><%= plant.name %></td>
            <td><%= plant.plantingInstructions %></td>
            <td><%= plant.wateringSchedule %></td>
            <td><%= plant.harvestTime %></td>
            <td>
              <a class="btn btn-warning btn-sm" href="/admin/plants/edit/<%= plant._id %>">Edit</a>
              <form action="/admin/plants/delete/<%= plant._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <h4>Add New Plant</h4>
  <form action="/add-plant" method="POST" class="mt-4">
    <div class="form-group">
      <label for="name">Plant Name:</label>
      <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="form-group">
      <label for="plantingInstructions">Planting Instructions:</label>
      <textarea class="form-control" id="plantingInstructions" name="plantingInstructions" rows="3" required></textarea>
    </div>
    <div class="form-group">
      <label for="wateringSchedule">Watering Schedule:</label>
      <input type="text" class="form-control" id="wateringSchedule" name="wateringSchedule" required>
    </div>
    <div class="form-group">
      <label for="harvestTime">Estimated Harvest Time:</label>
      <input type="text" class="form-control" id="harvestTime" name="harvestTime" required>
    </div>
    <button type="submit" class="btn btn-primary">Add Plant</button>
  </form>
  
</div>

<%- include("partials/AdminFooter.ejs") %>
