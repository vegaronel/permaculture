<%- include("partials/LoginPageHeader.ejs") %>

          <div class="login-container">
               <form action="/login" method="post" class="login-form py-4">
                    <div class="text-center">
                         <p class="h5 fw-bold mt-3">Sign In</p>
                         <p class="light-text mt-2">Welcome back</p>
                    </div>
                    <div>
                         <% if (locals.message) { %>
                         <small class="success-message"><%= message %></small>
                         <% } %> <% if (locals.wrongCridentials) { %>
                         <small class="wrong-message">*<%= wrongCridentials %></small>
                         <% } %>
                    </div>
                    <div class="mt-3">
                         <label class="form-label" for="email">Email<span class="input-asterisk">*</span></label>
                         <input type="text" class="form-control" name="email" placeholder="Email" />
                    </div>
                    <div class="mt-3">
                         <div class="d-flex justify-content-between">
                              <label class="form-label" for="password">Password<span class="input-asterisk">*</span></label>
                              <a href="#" class="lighter-text"><small>Forgot Password?</small></a>
                         </div>
                         <input type="password" name="password" class="form-control" placeholder="Password" />
                    </div>
                    <div class="d-flex flex-column mt-3">
                         <button type="submit" class="btn my-button mt-3">Login</button>
                         <p class="text-center mt-3">Don't have an account?<a class="fs-13" href="/register" class="no-account-text"> Sign up</a></p>
                    </div>
               </form>
               <a class="btn btn-primary" href="admin">Admin</a>
          </div>
</body>
<%- include("partials/LoginFooter.ejs") %>
